# Example terraform.tfvars file
#
# WHY: This file demonstrates how to customize variables without modifying code.
# Copy this to terraform.tfvars and adjust values for your environment.
#
# SECURITY: Never commit terraform.tfvars to git if it contains secrets.
# Add it to .gitignore and use different approaches for sensitive data:
# 1. Environment variables: TF_VAR_variable_name
# 2. AWS Secrets Manager (fetch in code)
# 3. terraform.tfvars.encrypted (using tools like SOPS)

aws_region = "eu-central-1"
cluster_name = "playground-eks-cluster"
cluster_version = "1.28"

environment = "development"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"

# Node Group Configuration
node_group_desired_size = 2
node_group_min_size     = 1
node_group_max_size     = 3
node_instance_types     = ["t3.medium"]

# Tags
tags = {
  Project     = "playground-cloud-native-stack"
  ManagedBy   = "Terraform"
  Owner       = "your-name"
  CostCenter  = "development"
}
